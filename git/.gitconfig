[user]
  name = Dave Shah
  email = david.a.shah@gmail.com
[color]
  ui = auto
[alias]
	d = diff
	p = pull --rebase
  pf = push --force-with-lease
  st = status
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
  fa = fetch --all
	fp = fetch -p
  pom = push origin master
	phm = push heroku master
  b = branch
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  div = divergence
  gn = goodness
  gnc = goodness --cached
  logo = log --oneline
  l = "!source ~/.dotfiles/git/git-helpers && pretty_git_log"
  r = "!git l -30"
	cm = checkout master
[merge]
  tool = vimdiff

[core]
	ignorecase = false
	editor = /usr/bin/vim
	excludesfile = /Users/dshah/.gitignore_global
[push]
	default = simple
